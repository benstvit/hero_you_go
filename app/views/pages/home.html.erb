<%= render 'shared/banner' %>

  <div class="hero-cards">
  <% @top_reviews.each do |review|%>
  <%= link_to hero_path(review.hero) do%>
    <div class="hero-card">
    <div class="hero-img-background">
      <% review.hero.powers.each do |power| %>
        <p><%= power.power %></p>
      <% end %>
        </div>
    <div class="top-hero d-flex justify-content-center align-items-center">
        <h2>‚≠ê</h2>
      </div>
      <div class="hero-avatar d-flex justify-content-center align-items-end">
        <% if review.hero.photo.attached? %>
        <div class="hero-img"><%= cl_image_tag(review.hero.photo.key) %></div>
        <% end %>
        <div class="hero-description">
        </div>
      </div>
      <div class=" d-flex justify-content-center align-items-center">
      </div>
    </div>
    <% end %>
  <% end %>
</div>
