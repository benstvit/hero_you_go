<div class="review-container p-4">
  <h2>Don't be scare to rate your Hero ! ⭐️</h2>
  <%= simple_form_for([@hero, @review]) do |f| %>
    <%= f.input :comment, as: :text %>
    <%= f.input :rating, collection: 1..5 %>
    <%= f.submit "Review this Hero", class: "btn btn-primary" %>
  <% end %>
</div>
